<div id="<%= dom_id post %>" class="card shadow-sm">
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <p class="card-text"><%= post.description %></p>
    <p class="text-muted">投稿者: <%= post.user&.name || "不明なユーザー" %></p>

    <%# 詳細を表示するリンク %>
    <% if current_page?(posts_path) %>
      <a href="<%= post_path(post) %>" class="btn btn-outline-primary">詳細を表示する</a>
    <% end %>

    <%# 編集・削除ボタンの表示 %>
    <% if current_page?(post) %>
      <%= link_to '編集', edit_post_path(post), class: 'btn btn-outline-primary' %>
      <%= link_to '削除', post_path(post), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, class: 'btn btn-outline-danger' %>
    <% end %>
  </div>
</div>
